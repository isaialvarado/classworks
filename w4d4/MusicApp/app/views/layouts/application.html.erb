<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= link_to "Home", bands_url %>
  <% if current_user %>
    <%= button_to "Logout", "/session", method: :delete %>
    <%= link_to "MyProfile", user_url(current_user) %>
    <br>
  <% else %>
    <%= link_to "Login", new_session_url %>
    <%= link_to "Signup", new_user_url %>
  <% end %>
  <% if flash[:message] %>
    <br>
    <%= flash[:message] %>
    <br>
  <% end %>

<%= yield %>

</body>
</html>
