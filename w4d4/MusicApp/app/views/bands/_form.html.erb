<h1><%= action %> Band</h1>

<% if action == "Edit" %>
  <% action_url = band_url(band) %>
<% else %>
  <% action_url = bands_url %>
<% end %>

<form action="<%= action_url %>" method="post">
  <%= csrf_token %>
  <% if action == "Edit" %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  <label for="name">Band Name</label>
  <input
    type="text"
    name="band[name]"
    value="<%= band.name %>">

  <%= submit_button %>
</form>
