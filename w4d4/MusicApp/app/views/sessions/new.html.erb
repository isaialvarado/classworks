<h1>Login</h1>

<form action="/session" method="post">
  <%= csrf_token %>

  <label for="email">Email</label>
  <input type="text" id="email" name="user[email]" value="">

  <label for="password">Password</label>
  <input type="text" id="password" name="user[password]" value="">

  <%= submit_button("Login") %>
</form>
